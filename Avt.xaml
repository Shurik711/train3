<Window x:Class="train3.Avt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:train3"
        mc:Ignorable="d"
        Title="Avt" Height="450" Width="800">
    <Grid Background="#FF68C8FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"></RowDefinition>
            <RowDefinition Height="237*"></RowDefinition>
            <RowDefinition Height="112*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" HorizontalAlignment="Center" Content="Логин" FontSize="30" Margin="349,20,349,140" Width="94"></Label>
        <TextBox x:Name="Login" Grid.Row="1" Margin="220, 80, 220, 130"></TextBox>
        <Label Grid.Row="1" HorizontalAlignment="Center" Content="Пароль" FontSize="30" Margin="340,120,340,45" Width="112"></Label>
        <TextBox x:Name="Password" Grid.Row="1" Margin="220, 170, 220, 40"></TextBox>
        <Button x:Name="B1" Content="Войти" FontSize="30" Grid.Row="2" Margin="510, 40, 20, 20" Click="B1_Click"></Button>
        <Button x:Name="B2" Content="Назад" FontSize="30" Grid.Row="2" Margin="20, 40, 510, 20" Click="B2_Click"></Button>
    </Grid>
</Window>
