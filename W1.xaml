<Window x:Class="train3.W1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:train3"
        mc:Ignorable="d"
        Title="W1" Height="450" Width="800">
    <Grid Background="#FF68C8FF">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="B1" Content="Авторизация/регистрация" FontSize="30" Grid.Row="0" Margin="100, 20" Click="B1_Click"></Button>
        <Button x:Name="B2" Content="Информация о сети магазинов" FontSize="30" Grid.Row="1" Margin="100, 20" Click="B2_Click"></Button>
        <Button x:Name="B3" Content="Назад" FontSize="30" Grid.Row="2" Margin="100, 20" Click="B3_Click"></Button>
    </Grid>
</Window>
