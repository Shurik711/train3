<Window x:Class="train3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:train3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF71D8FF" Offset="0.67"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"></ColumnDefinition>
            <ColumnDefinition Width="241*"></ColumnDefinition>
            <ColumnDefinition Width="80*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"></RowDefinition>
            <RowDefinition Height="375*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="B1" Content="Главная страница" Grid.Row="1" Margin="10, 20, 10, 320" Click="b1_Click"></Button>
        <Button x:Name="B4" Content="Выход" Grid.Row="1" Margin="10, 330, 10, 10" Click="b4_Click"></Button>

        <Frame Grid.Column="1" Grid.Row="1"></Frame>
    </Grid>
</Window>
