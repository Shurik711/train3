<Window x:Class="train3.Regmenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:train3"
        mc:Ignorable="d"
        Title="Regmenu" Height="450" Width="800">
    <Grid Background="#FF68C8FF">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="B1" Grid.Row="0" Content="Авторизация" FontSize="30" Margin="30" Click="B1_Click"></Button>
        <Button x:Name="B2" Grid.Row="1" Content="Регистрация" FontSize="30" Margin="30" Click="B2_Click"></Button>
        <Button x:Name="B3" Grid.Row="2" Content="Назад" FontSize="30" Margin="30" Click="B3_Click"></Button>
    </Grid>
</Window>
